---
import ServiceCardAccordion from './ServiceCardAccordion.astro';
import { t } from '../i18n/index';

export interface Props {
  lang?: string;
}

const { lang = 'ru' } = Astro.props;
---

<section id="business" class="business-section">
  <div class="container">
    <h2 class="section-title">
      <span class="accent-text">{t('sections.businessHighlight', lang)}</span> {t('sections.businessTitle', lang)}
    </h2>
    <p class="section-description">{t('sections.businessDescription', lang)}</p>

    <div class="services-grid-2col">
      <ServiceCardAccordion title={t('business.service1.title', lang)}>
        <p>{t('business.service1.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service2.title', lang)}>
        <p>{t('business.service2.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service3.title', lang)}>
        <p>{t('business.service3.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service4.title', lang)}>
        <p>{t('business.service4.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service5.title', lang)}>
        <p>{t('business.service5.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service6.title', lang)}>
        <p>{t('business.service6.description', lang)}</p>
      </ServiceCardAccordion>

      <ServiceCardAccordion title={t('business.service7.title', lang)}>
        <p>{t('business.service7.description', lang)}</p>
      </ServiceCardAccordion>
    </div>
  </div>
</section>

<style>
  .business-section {
    padding: 8rem 5%;
    background: var(--primary);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--text);
  }

  .accent-text {
    background: linear-gradient(135deg, var(--accent), var(--accent-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    text-align: center;
    max-width: 900px;
    margin: 0 auto 5rem;
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text-muted);
  }

  .services-grid-2col {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .business-section {
      padding: 4rem 5%;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-description {
      font-size: 1rem;
      margin-bottom: 3rem;
    }

    .services-grid-2col {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
