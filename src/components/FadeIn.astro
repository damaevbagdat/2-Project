---
// src/components/FadeIn.astro
// Компонент для анимации плавного появления элементов при скролле
export interface Props {
  tag?: string;
  class?: string;
}

const { tag = 'div', class: className = '' } = Astro.props;
const attrs = { ...Astro.props, tag, class: undefined };
const Tag = tag;
---

{Astro.slots.has('default') ? (
  <Tag
    {...attrs}
    class={`fade-in-element ${className}`}
  >
    <slot />
  </Tag>
) : (
  <Tag
    {...attrs}
    class={`fade-in-element ${className}`}
  />
)}

<style>
  .fade-in-element {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .fade-in-element.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>