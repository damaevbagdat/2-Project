---
import '../styles/global.css';
import { t } from '../i18n/index';

export interface Props { lang?: string }
const { lang = 'ru' } = Astro.props;

const services = [
  { categoryKey: 'pricing.service1.category', titleKey: 'pricing.service1.title', priceKey: 'pricing.service1.price' },
  { categoryKey: 'pricing.service2.category', titleKey: 'pricing.service2.title', priceKey: 'pricing.service2.price' },
  { categoryKey: 'pricing.service3.category', titleKey: 'pricing.service3.title', priceKey: 'pricing.service3.price' }
];
---

<section class="pricing-section">
  <div class="container">
    <h2 class="section-title">{t('sections.pricingTitle', lang)}</h2>
    <p class="section-subtitle">{t('sections.pricingSubtitle', lang)}</p>

    <div class="pricing-list">
      {services.map(service => (
        <div class="pricing-item">
          <div class="pricing-info">
            <span class="pricing-category">{t(service.categoryKey, lang)}</span>
            <h3 class="pricing-title">{t(service.titleKey, lang)}</h3>
          </div>
          <div class="pricing-price">{t(service.priceKey, lang)}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
.pricing-section {
  padding: 8rem 5%;
  background: var(--primary);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.section-title {
  text-align: center;
  font-size: 3rem;
  margin-bottom: 1.5rem;
  color: var(--accent);
  font-weight: 800;
}

.section-subtitle {
  text-align: center;
  color: var(--text-muted);
  font-size: 1.1rem;
  margin-bottom: 4rem;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.8;
}

.pricing-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.pricing-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rem;
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  border-radius: 15px;
  border: 1px solid rgba(201, 169, 97, 0.2);
  transition: all 0.3s ease;
}

.pricing-item:hover {
  background: var(--bg-card-hover);
  border-color: var(--accent);
  transform: translateX(10px);
}

.pricing-info {
  flex: 1;
}

.pricing-category {
  display: block;
  font-size: 0.9rem;
  color: var(--accent-light);
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.pricing-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text);
  margin: 0;
}

.pricing-price {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--accent);
  white-space: nowrap;
}

@media (max-width: 768px) {
  .pricing-section {
    padding: 4rem 1rem;
  }

  .section-title {
    font-size: 2rem;
  }

  .pricing-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
  }

  .pricing-title {
    font-size: 1.2rem;
  }

  .pricing-price {
    font-size: 1.1rem;
  }
}
</style>
