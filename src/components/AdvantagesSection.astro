---

<section id="advantages" class="advantages-section">
  <div class="container">
    <h2 class="section-title">{t('sections.advantagesTitle', lang)}</h2>
    <div class="advantages-grid">
      {advantages.map(adv => (
        <div class="advantage-card">
          <div class="advantage-icon">{adv.icon}</div>
          <h3>{t(adv.titleKey, lang)}</h3>
          <p>{t(adv.descKey, lang)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
.advantages-section {
  padding: 8rem 5%;
  background: var(--secondary);
}

.section-title {
  text-align: center;
  font-size: 3rem;
  margin-bottom: 4rem;
  color: var(--accent);
}

.advantages-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 3rem;
  max-width: 1200px;
  margin: 0 auto;
}

.advantage-card {
  text-align: center;
  padding: 2rem;
}

.advantage-icon {
  width: 100px;
  height: 100px;
  background: var(--gradient-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem;
  font-size: 2.5rem;
}

.advantage-card h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--accent);
}

.advantage-card p {
  color: var(--text-muted);
  line-height: 1.8;
}

@media (max-width: 768px) {
  .advantages-section {
    padding: 4rem 1rem;
  }

  .section-title {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .advantages-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .advantage-card {
    padding: 1rem;
  }
}
</style>
