---
// src/components/AdvantagesSection.astro
import '../styles/global.css';
import { t } from '../i18n/index';

export interface Props { lang?: string }
const { lang = 'ru' } = Astro.props;

const advantages = [
  { icon: 'ğŸ‘¨â€ğŸ”§', titleKey: 'advantages.adv1.title', descKey: 'advantages.adv1.desc' },
  { icon: 'ğŸ“¦', titleKey: 'advantages.adv4.title', descKey: 'advantages.adv4.desc' },
  { icon: 'ğŸ’°', titleKey: 'advantages.adv5.title', descKey: 'advantages.adv5.desc' }
