---
// src/layouts/BaseLayout.astro
export interface Props {
	lang?: string;
	title?: string;
	description?: string;
}
const {
	lang = 'ru',
	title = 'Halcyon | Юридические услуги премиум-класса в Казахстане',
	description = 'Halcyon - юридическая помощь премиум-класса в Казахстане. Расторжение брака под ключ, взыскание алиментов, определение графика общения с ребенком. Полная конфиденциальность и профессиональный подход.'
} = Astro.props;
import '../styles/global.css';
import '../styles/halcyon-animations.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { generateHreflangs } from '../i18n/index';

// Define localized site names
const localizedSiteNames = {
  ru: 'Halcyon | Юридические услуги премиум-класса в Казахстане',
  en: 'Halcyon | Premium Legal Services in Kazakhstan',
  kz: 'Halcyon | Қазақстанда премиум-класс заңгерлік қызметтер'
};

const siteName = localizedSiteNames[lang] || localizedSiteNames.ru;
