---
// src/layouts/BaseLayout.astro
export interface Props {
	lang?: string;
	title?: string;
	description?: string;
}
const {
	lang = 'ru',
	title = 'GOSE | Профессиональный ремонт спецтехники в Казахстане',
	description = 'GOSE - профессиональный ремонт спецтехники, экскаваторов-погрузчиков, дизельных двигателей. Металлообработка, запчасти в наличии, мобильные бригады. Звоните сейчас!'
} = Astro.props;
import '../styles/global.css';
import '../styles/halcyon-animations.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { generateHreflangs } from '../i18n/index';

// Define localized site names
const localizedSiteNames = {
  ru: 'GOSE | Ремонт спецтехники в Казахстане',
  en: 'GOSE | Heavy Equipment Repair in Kazakhstan',
  kz: 'GOSE | Қазақстанда арнайы техниканы жөндеу'
};

const siteName = localizedSiteNames[lang] || localizedSiteNames.ru;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="ремонт спецтехники Казахстан, ремонт экскаваторов Алматы, ремонт дизельных двигателей, металлообработка, ремонт погрузчиков, запчасти спецтехника, мобильная бригада ремонт, GOSE, Gods of Special Equipment" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="preconnect" href="https://mc.yandex.ru">
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="dns-prefetch" href="https://mc.yandex.ru">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="msapplication-TileColor" content="#2b2b2b">
    <meta name="theme-color" content="#2b2b2b">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1EFB30Q8SN"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1EFB30Q8SN');
    </script>

    <!-- Yandex.Metrika counter -->
    <script type="text/javascript" >
      (function(m,e,t,r,i,k,a){
        m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
        m[i].l=1*new Date();
        k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)
      })(window,document,"script","https://mc.yandex.ru/metrika/tag.js","ym");

      ym(105546295, "init", {
        clickmap:true,
        trackLinks:true,
        accurateTrackBounce:true,
        webvisor:true
      });
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/105546295" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:image" content={new URL('/og-image.jpg', Astro.url).href} />
    <meta property="og:locale" content={lang === 'ru' ? 'ru_RU' : lang === 'kz' ? 'kk_KZ' : 'en_US'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.jpg', Astro.url).href} />
    
    {generateHreflangs(Astro.url.pathname).map(item => (
      <link rel="alternate" href={new URL(item.href, Astro.url).href} hreflang={item.locale} />
    ))}
    <link rel="alternate" href={new URL('/', Astro.site || 'https://gose.kz').href} hreflang="x-default" />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "LocalBusiness",
            "@id": "https://gose.kz/#localbusiness",
            "name": "GOSE",
            "alternateName": "Gods of Special Equipment",
            "url": "https://gose.kz",
            "logo": "https://gose.kz/logo.png",
            "image": "https://gose.kz/og-image.jpg",
            "description": "Профессиональный ремонт спецтехники, экскаваторов-погрузчиков, дизельных двигателей. Металлообработка, запчасти, мобильные бригады.",
            "priceRange": "$$",
            "telephone": "+7-776-005-42-09",
            "email": "info@gose.kz",
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Алматы",
              "addressRegion": "Алматинская область",
              "addressCountry": "KZ"
            },
            "geo": {
              "@type": "GeoCoordinates",
              "latitude": "43.2220",
              "longitude": "76.8512"
            },
            "openingHoursSpecification": {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
              "opens": "08:00",
              "closes": "20:00"
            },
            "areaServed": {
              "@type": "Country",
              "name": "Kazakhstan"
            },
            "serviceArea": {
              "@type": "GeoCircle",
              "name": "Казахстан и регионы"
            },
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Услуги по ремонту спецтехники",
              "itemListElement": [
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Ремонт экскаваторов-погрузчиков",
                    "description": "Комплексный ремонт экскаваторов-погрузчиков всех марок"
                  }
                },
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Ремонт дизельных двигателей",
                    "description": "Капитальный и текущий ремонт дизельных двигателей спецтехники"
                  }
                },
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Металлообработка",
                    "description": "Токарные, фрезерные работы, сварка, наплавка"
                  }
                }
              ]
            },
            "sameAs": [
              "https://wa.me/77760054209",
              "https://t.me/+77760054209"
            ]
          },
          {
            "@type": "Organization",
            "@id": "https://gose.kz/#organization",
            "name": "GOSE",
            "alternateName": "Gods of Special Equipment",
            "url": "https://gose.kz",
            "logo": {
              "@type": "ImageObject",
              "url": "https://gose.kz/logo.png",
              "width": 250,
              "height": 60
            },
            "contactPoint": {
              "@type": "ContactPoint",
              "telephone": "+7-776-005-42-09",
              "contactType": "customer service",
              "areaServed": "KZ",
              "availableLanguage": ["Russian", "Kazakh", "English"]
            }
          },
          {
            "@type": "BreadcrumbList",
            "@id": "https://gose.kz/#breadcrumb",
            "itemListElement": [
              {
                "@type": "ListItem",
                "position": 1,
                "name": "Главная",
                "item": "https://gose.kz/"
              }
            ]
          }
        ]
      }
    </script>
  </head>
  <body>
    <Header lang={lang} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} />
    <script src="../scripts/observe-fade.js" defer></script>
  </body>
</html>