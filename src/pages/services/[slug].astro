---
// src/pages/services/[slug].astro
import { getCollection, getEntryBySlug } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Получаем все услуги для генерации статических маршрутов
export async function getStaticPaths() {
  const allServices = await getCollection('services');
  return allServices.map((service) => ({ params: { slug: service.slug } }));
}

// Получаем props из Astro
const service = await getEntryBySlug('services', Astro.params.slug);
if (!service) {
  throw new Error(`Service not found: ${Astro.params.slug}`);
}
// Для data-коллекций контент нужно рендерить: получаем компонент Content
const rendered = await service.render();
const { Content } = rendered;
---

<BaseLayout>
  <Header />
  <main>
    <div class="container">
      <article class="service-page">
        <h1>{service.data.title}</h1>
        <p class="service-description">{service.data.description}</p>
        <div class="service-meta">
          <span class="service-category">Категория: {service.data.category}</span>
        </div>
        <div class="service-content">
          <Content />
        </div>
      </article>
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .service-page {
    padding: 2rem 0;
  }

  .service-page h1 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  .service-description {
    color: var(--text-secondary);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }

  .service-meta {
    margin-bottom: 2rem;
  }

  .service-category {
    background-color: var(--accent-color);
    color: var(--text-light);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .service-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .service-content h2 {
    color: var(--primary-color);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .service-content h3 {
    color: var(--primary-color);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .service-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .service-content ul, .service-content ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .service-content li {
    margin-bottom: 0.5rem;
  }
</style>